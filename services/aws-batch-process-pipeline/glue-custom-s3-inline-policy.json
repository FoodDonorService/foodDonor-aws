{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "S3ListAccess",
            "Effect": "Allow",
            "Action": "s3:ListBucket",
            "Resource": [
                "arn:aws:s3:::<RAW_DATA_BUCKET>",
                "arn:aws:s3:::<PROCESSED_DATA_BUCKET>"
            ]
        },
        {
            "Sid": "S3ReadAccessRaw",
            "Effect": "Allow",
            "Action": [
                "s3:GetObject"
            ],
            "Resource": [
                "arn:aws:s3:::<RAW_DATA_BUCKET>/*"
            ]
        },
        {
            "Sid": "S3WriteAccessProcessed",
            "Effect": "Allow",
            "Action": [
                "s3:PutObject",
                "s3:DeleteObject"
            ],
            "Resource": [
                "arn:aws:s3:::<PROCESSED_DATA_BUCKET>/*"
            ]
        }
    ]
}