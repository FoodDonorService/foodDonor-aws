{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "AthenaAccess",
            "Effect": "Allow",
            "Action": [
                "athena:StartQueryExecution",
                "athena:GetQueryExecution",
                "athena:GetQueryResults"
            ],
            "Resource": [
                "arn:aws:athena:ap-northeast-2:<AWS_ACCOUNT_ID>:workgroup/primary"
            ]
        },
        {
            "Sid": "GlueAccess",
            "Effect": "Allow",
            "Action": [
                "glue:GetDatabase",
                "glue:GetTable"
            ],
            "Resource": [
                "arn:aws:glue:ap-northeast-2:<AWS_ACCOUNT_ID>:catalog",
                "arn:aws:glue:ap-northeast-2:<AWS_ACCOUNT_ID>:database/<ATHENA_DATABASE>",
                "arn:aws:glue:ap-northeast-2:<AWS_ACCOUNT_ID>:table/<ATHENA_DATABASE>/<ATHENA_TABLE>"
            ]
        },
        {
            "Sid": "S3AccessProcessedData",
            "Effect": "Allow",
            "Action": [
                "s3:GetObject",
                "s3:ListBucket"
            ],
            "Resource": [
                "arn:aws:s3:::<PROCESSED_DATA_BUCKET>",
                "arn:aws:s3:::<PROCESSED_DATA_BUCKET>/*"
            ]
        },
        {
            "Sid": "S3AccessAthenaResults",
            "Effect": "Allow",
            "Action": [
                "s3:GetObject",
                "s3:PutObject",
                "s3:ListBucket"
            ],
            "Resource": [
                "arn:aws:s3:::<ATHENA_RESULTS_BUCKET>",
                "arn:aws:s3:::<ATHENA_RESULTS_BUCKET>/*"
            ]
        }
    ]
}