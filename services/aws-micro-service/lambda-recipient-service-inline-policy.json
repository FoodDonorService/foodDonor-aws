{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "DynamoDBMatchAccess",
            "Effect": "Allow",
            "Action": "dynamodb:*",
            "Resource": [
                "arn:aws:dynamodb:ap-northeast-2:<AWS_ACCOUNT_ID>:table/<RECIPIENT_TABLE_NAME>",
                "arn:aws:dynamodb:ap-northeast-2:<AWS_ACCOUNT_ID>:table/<MATCH_TABLE_NAME>",
                "arn:aws:dynamodb:ap-northeast-2:<AWS_ACCOUNT_ID>:table/<VOLUNTEER_TABLE_NAME>_match"
            ]
        },
        {
            "Sid": "BedrockInvokeAccess",
            "Effect": "Allow",
            "Action": "bedrock:InvokeModel",
            "Resource": "*"
        },
        {
            "Sid": "MarketplaceAccess",
            "Effect": "Allow",
            "Action": [
                "aws-marketplace:ViewSubscriptions",
                "aws-marketplace:Subscribe"
            ],
            "Resource": "*"
        },
        {
            "Sid": "SQSReceiveMessage",
            "Effect": "Allow",
            "Action": [
                "sqs:ReceiveMessage",
                "sqs:DeleteMessage",
                "sqs:GetQueueAttributes"
            ],
            "Resource": "arn:aws:sqs:ap-northeast-2:<AWS_ACCOUNT_ID>:<MATCH_QUEUE_NAME>"
        }
    ]
}