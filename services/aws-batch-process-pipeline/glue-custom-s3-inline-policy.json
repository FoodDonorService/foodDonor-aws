{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "S3ListAccess",
            "Effect": "Allow",
            "Action": "s3:ListBucket",
            "Resource": [
                "arn:aws:s3:::food-donor-raw-data-v1",
                "arn:aws:s3:::food-donor-processed-data-v1"
            ]
        },
        {
            "Sid": "S3ReadAccessRaw",
            "Effect": "Allow",
            "Action": [
                "s3:GetObject"
            ],
            "Resource": [
                "arn:aws:s3:::food-donor-raw-data-v1/*"
            ]
        },
        {
            "Sid": "S3WriteAccessProcessed",
            "Effect": "Allow",
            "Action": [
                "s3:PutObject",
                "s3:DeleteObject"
            ],
            "Resource": [
                "arn:aws:s3:::food-donor-processed-data-v1/*"
            ]
        }
    ]
}