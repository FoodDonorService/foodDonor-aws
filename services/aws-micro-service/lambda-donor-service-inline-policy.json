{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "DynamoDBDonorAccess",
            "Effect": "Allow",
            "Action": "dynamodb:*",
            "Resource": [
                "arn:aws:dynamodb:ap-northeast-2:<AWS_ACCOUNT_ID>:table/<DONOR_TABLE_NAME>",
                "arn:aws:dynamodb:ap-northeast-2:<AWS_ACCOUNT_ID>:table/<DONATION_TABLE_NAME>"
            ]
        },
        {
            "Sid": "SQSSendMessage",
            "Effect": "Allow",
            "Action": "sqs:SendMessage",
            "Resource": "arn:aws:sqs:ap-northeast-2:<AWS_ACCOUNT_ID>:<MATCH_QUEUE_NAME>"
        },
        {
            "Sid": "AthenaAccess",
            "Effect": "Allow",
            "Action": [
                "athena:StartQueryExecution",
                "athena:GetQueryExecution",
                "athena:GetQueryResults",
                "athena:BatchGetQueryExecution",
                "athena:StopQueryExecution"
            ],
            "Resource": "*"
        },
        {
            "Sid": "GlueAccess",
            "Effect": "Allow",
            "Action": [
                "glue:GetDatabase",
                "glue:GetTable",
                "glue:GetPartitions",
                "glue:GetPartition"
            ],
            "Resource": "*"
        },
        {
            "Sid": "S3AccessAthenaResults",
            "Effect": "Allow",
            "Action": [
                "s3:GetObject",
                "s3:PutObject",
                "s3:DeleteObject",
                "s3:ListBucket",
                "s3:GetBucketLocation",
                "s3:GetBucketAcl",
                "s3:PutBucketAcl"
            ],
            "Resource": [
                "arn:aws:s3:::<ATHENA_RESULTS_BUCKET>",
                "arn:aws:s3:::<ATHENA_RESULTS_BUCKET>/*"
            ]
        },
        {
            "Sid": "S3AccessProcessedData",
            "Effect": "Allow",
            "Action": [
                "s3:GetObject",
                "s3:ListBucket"
            ],
            "Resource": [
                "arn:aws:s3:::<PROCESSED_DATA_BUCKET>",
                "arn:aws:s3:::<PROCESSED_DATA_BUCKET>/*"
            ]
        }
    ]
}