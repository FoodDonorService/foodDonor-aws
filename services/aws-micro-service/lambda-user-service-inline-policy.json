{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "DynamoDBDonorAccess",
            "Effect": "Allow",
            "Action": "dynamodb:*",
            "Resource": [
                "arn:aws:dynamodb:ap-northeast-2:<AWS_ACCOUNT_ID>:table/<DONOR_TABLE_NAME>",
                "arn:aws:dynamodb:ap-northeast-2:<AWS_ACCOUNT_ID>:table/<RECIPIENT_TABLE_NAME>",
                "arn:aws:dynamodb:ap-northeast-2:<AWS_ACCOUNT_ID>:table/<VOLUNTEER_TABLE_NAME>"
            ]
        }
    ]
}