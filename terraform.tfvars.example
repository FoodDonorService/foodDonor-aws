# Terraform Variables Configuration
# Copy this file to terraform.tfvars and fill in your actual values
# terraform.tfvars should be added to .gitignore

# AWS Configuration
aws_region = "ap-northeast-2"

# Project Configuration
project_name = "food-donor"
env          = "dev"

# Cognito Configuration (will be auto-generated, but you can override)
# cognito_user_pool_name = "food-donor-user-pool-dev"
# cognito_user_pool_client_name = "food-donor-client-dev"

# API Gateway Configuration
api_gateway_stage = "v0"

# Lambda Configuration
lambda_runtime   = "nodejs22.x"
lambda_memory_size = 128

# Glue Configuration
glue_version          = "4.0"
glue_worker_type      = "G.1X"
glue_number_of_workers = 2

# S3 Bucket Names (without prefix - will be prefixed with project_name-env)
s3_bucket_names = {
  frontend       = "frontend"
  raw_data       = "raw-data"
  processed_data = "processed-data"
  athena_results = "athena-results"
  glue_assets    = "glue-assets"
  public_data    = "public-data"
}

# DynamoDB Table Names
dynamodb_table_names = {
  donor          = "donor"
  recipient      = "recipient"
  volunteer      = "volunteer"
  donation       = "donation"
  volunteer_match = "volunteer_match"
  task           = "task"
}

# SQS Queue Names (without prefix)
sqs_queue_names = {
  match_queue = "match-queue"
}

# Glue Job Names (without prefix)
glue_job_names = {
  etl_job = "ETL-job"
}

# CORS Allowed Origins for API Gateway
cors_allowed_origins = [
  "http://localhost:3000",
  "http://192.168.200.146:3000"
]

# Terraform Backend Configuration
terraform_backend_enabled = false  # Backend 리소스 생성 후 true로 변경
terraform_state_bucket_name = "terraform-state"
terraform_lock_table_name = "terraform-locks"
